<% layout("layouts/boilerplate") %>
    <div class="row">
        <div class="col-10 col-md-8 offset-1 offset-md-2">
            <br><br>
            <h2 class="texts">Create new Listing</h2>
            <br>
            <form method="POST" action="/listings" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label texts">Title</label>
                    <input placeholder="Enter Title" name="listing[title]" type="text" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label texts">Location</label>
                    <input placeholder="Enter Location" name="listing[location]" type="text" class="form-control"
                        required>
                </div class="mb-3">

                <div class="row">

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label texts">Country</label>
                        <input placeholder="Enter Country" name="listing[country]" type="text" class="form-control"
                            required>
                    </div>

                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label texts">Price</label>
                        <input placeholder="Enter Price" name="listing[price]" type="listing[number]"
                            class="form-control" required>
                    </div>

                </div>

                <div class="mb-3">
                    <label for="image" class="form-label texts">Upload Image</label>
                    <input placeholder="Upload Image" name="listing[image]" type="file" class="form-control" style="color: white;" required>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label texts">Description</label>
                    <br>
                    <textarea placeholder="Write Description" name="listing[description]" class="form-control"
                        required></textarea>
                </div>

                <button class="btn btn-dark add-btn">Add</button>
                <br><br>
            </form>
        </div>
    </div>